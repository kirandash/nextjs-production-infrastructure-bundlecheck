{
  "name": "nextjs-production-infrastructure-bundlecheck",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "bundlewatch": "bundlewatch",
    "prepare": "husky",
    "test": "pnpm run test:bundle-size",
    "test:bundle-size": "bundlewatch"
  },
  "dependencies": {
    "next": "15.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "bundlewatch": "^0.4.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.2",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "bundlewatch": {
    "files": [
      {
        "path": ".next/**/*.js",
        "maxSize": "100kB"
      }
    ],
    "ci": {
      "repoBranchBase": "main",
      "trackBranches": [
        "main"
      ]
    }
  }
}
